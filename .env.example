# ===========================================
# RecycleOps AI Assistant - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# --- Slack Configuration ---
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_APP_TOKEN=xapp-your-app-token
SLACK_SIGNING_SECRET=your-signing-secret

# Channels to monitor (comma-separated channel IDs)
SLACK_MONITOR_CHANNELS=C12345678,C87654321

# --- OpenAI Configuration ---
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# --- PostgreSQL Configuration ---
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=recycleops
POSTGRES_USER=recycleops
POSTGRES_PASSWORD=your-secure-password

# Database URL (constructed from above or override directly)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# --- ChromaDB Configuration ---
CHROMA_PERSIST_DIRECTORY=./data/chroma
CHROMA_COLLECTION_NAME=solutions

# --- Application Settings ---
# Time to wait before analyzing a conversation (in hours)
LEARNING_DELAY_HOURS=12

# Similarity threshold for solution matching (0.0 - 1.0)
SIMILARITY_THRESHOLD=0.75

# Maximum number of solutions to return in search
MAX_SEARCH_RESULTS=3

# Enable proactive support (auto-suggest solutions for new errors)
PROACTIVE_SUPPORT_ENABLED=true

# --- Logging ---
LOG_LEVEL=INFO
LOG_FORMAT=json
